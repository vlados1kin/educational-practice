program Main;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

type
  TComparator = function(const Choice: Integer): boolean;

function MenuRead(const Choice: Integer): boolean;
begin
  Result := (Choice > 10) or (Choice < 1);
end;

procedure CorrectRead(var Choice: Integer; Comparator: TComparator);
var
  Input: String;
  Flag: boolean;
  Error: Integer;
begin
  repeat
    ReadLn(Input);
    Val(Input, Choice, Error);
    Flag := Comparator(Choice);
    if (Error <> 0) or Flag then
      WriteLn('Неверный ввод');
  until (Error = 0) and (not Flag);
end;

procedure WriteText;
begin
  WriteLn('Выберите пункт меню:' + #10#13 +
          '1. Чтение данных из файла' + #10#13 +
          '2. Просмотр всего списка' + #10#13 +
          '3. Сортировка списка' + #10#13 +
          '4. Поиск данных с использованием фильтров' + #10#13 +
          '5. Добавление данных в список' + #10#13 +
          '6. Удаление данных из списка' + #10#13 +
          '7. Редактирование данных' + #10#13 +
          '8. Подбор списка возможных вакансий для данного кандидата' + #10#13 +
          '9. Выход из программы без сохранения изменений' + #10#13 +
          '10. Выход с сохранением изменений');
end;

procedure Menu;
var
  Choice: Integer;
begin
  WriteText;
  CorrectRead(Choice, MenuRead);
  case Choice of
    1:
      WriteLn('one');
    2:
      WriteLn('two');
    3:
      WriteLn('three');
    4:
      WriteLn('four');
    5:
      WriteLn('five');
    6:
      WriteLn('six');
    7:
      WriteLn('seven');
    8:
      WriteLn('eight');
    9:
      WriteLn('nine');
    10:
      WriteLn('ten');
  end;
end;

begin
  Menu;
  ReadLn;
end.
